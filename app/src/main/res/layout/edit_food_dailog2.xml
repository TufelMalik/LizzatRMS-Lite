<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_190sdp"
    app:cardCornerRadius="@dimen/_20sdp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/multi_color1">

        <TextView
            android:id="@+id/txtTitleDialog"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Enter New Value :"
            android:textSize="@dimen/_22ssp" />

        <EditText
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:id="@+id/etNewValueDialog"
            android:textSize="@dimen/_17ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:hint="Enter new value"
            android:inputType="text"
            />
        <Button
            android:id="@+id/buttonSaveDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:padding="@dimen/_6sdp"
            android:textSize="@dimen/_17ssp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/corner_black_border"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>